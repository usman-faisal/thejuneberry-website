// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Live {
  id          String    @id @default(cuid())
  title       String
  description String?
  date        DateTime
  videoUrl    String?
  thumbnail   String?
  thumbnail_public_id String?
  articles    Article[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Article {
  id          String      @id @default(cuid())
  name        String
  description String?
  price       Float
  images      String[]
  videos      String[]
  category    String?
  sizes       Size[]      // Changed to Size enum array
  inStock     Boolean     @default(true)
  featured    Boolean     @default(false)
  videoUrl    String?     // Added this field for Facebook embed URLs
  liveId      String?
  live        Live?       @relation(fields: [liveId], references: [id])
  orderItems  OrderItem[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

// Remove ArticleSize model since we're using enum

model Order {
  id          String      @id @default(cuid())
  customerName String
  email       String?
  phone       String
  address     String
  city        String
  shippingCost Int       @default(0)
  postalCode  String?
  items       OrderItem[]
  total       Float
  status      OrderStatus @default(PENDING)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  articleId String
  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  size      String?  
  quantity  Int
  price     Float
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
}

enum Size {
  XS
  S
  M
  L
  XL
  XXL
  XXXL
}